@model IEnumerable<EmployeeManagementSystem.Models.Department>

@{
    ViewData["Title"] = "Departments";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New Department</a>
</p>

<table class="table table-bordered table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.DepartmentName)</th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.DepartmentName)</td>
                <td class="text-center">
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.DepartmentId" title="Edit Department">
                        Edit
                    </a>
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.DepartmentId" title="View Details">
                        Details
                    </a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.DepartmentId" title="Delete Department" onclick="return confirm('Are you sure you want to delete this department?');">
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
