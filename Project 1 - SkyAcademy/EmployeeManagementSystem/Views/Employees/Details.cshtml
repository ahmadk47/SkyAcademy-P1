@model EmployeeManagementSystem.Models.Employee

@{
    ViewData["Title"] = "Employee Details";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Employee Details</h3>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 font-weight-bold">@Html.DisplayNameFor(model => model.EmployeeName)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.EmployeeName)</dd>

                <dt class="col-sm-3 font-weight-bold">@Html.DisplayNameFor(model => model.GenderCode)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.GenderCode)</dd>

                <dt class="col-sm-3 font-weight-bold">@Html.DisplayNameFor(model => model.VacationDaysLeft)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.VacationDaysLeft)</dd>

                <dt class="col-sm-3 font-weight-bold">@Html.DisplayNameFor(model => model.Salary)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Salary)</dd>

                <dt class="col-sm-3 font-weight-bold">@Html.DisplayNameFor(model => model.Department)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Department.DepartmentName)</dd>

                <dt class="col-sm-3 font-weight-bold">@Html.DisplayNameFor(model => model.Position)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Position.PositionName)</dd>

                <dt class="col-sm-3 font-weight-bold">@Html.DisplayNameFor(model => model.ReportedTo)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.ReportedTo.EmployeeNumber)</dd>
            </dl>
        </div>
        <div class="card-footer text-end">
            <a asp-action="Edit" asp-route-id="@Model?.EmployeeNumber" class="btn btn-warning">Edit</a>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>