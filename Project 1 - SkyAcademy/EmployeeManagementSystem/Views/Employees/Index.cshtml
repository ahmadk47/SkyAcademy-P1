@using EmployeeManagementSystem.DTOs;
@using EmployeeManagementSystem.Models;
@model IEnumerable<EmployeeManagementSystem.DTOs.EmployeeDTO>;

@{
    ViewData["Title"] = "Employees";
}

@if (!Model.Any())
{
    <div class="alert alert-warning text-center mt-4">
        No data found. <a asp-action="SeedData" class="alert-link">Seed initial data</a>
    </div>
}
else
{
    <div class="container mt-4">
        <h2 class="text-center text-primary">Employees List</h2>
        <table class="table table-hover table-bordered shadow-sm mt-3">
            <thead class="bg-primary text-white">
                <tr>
                    <th>Employee Number</th>
                    <th>Name</th>
                    <th>Department</th>
                    <th>Salary</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Number</td>
                        <td>@item.Name</td>
                        <td>@item.Department</td>
                        <td>@item.Salary.ToString("C2")</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Number" class="btn btn-info btn-sm">
                                <i class="bi bi-eye"></i> View Details
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
