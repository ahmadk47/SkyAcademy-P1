@model IEnumerable<EmployeeManagementSystem.Models.VacationRequest>

@{
    ViewData["Title"] = "Vacation Requests";
}

<div class="container mt-4">
    <h2 class="text-center text-primary">Vacation Requests</h2>
    <p class="text-end">
        <a asp-action="Create" class="btn btn-success">Create New</a>
    </p>
    <table class="table table-hover table-bordered shadow-sm mt-3">
        <thead class="bg-primary text-white">
            <tr>
                <th>@Html.DisplayNameFor(model => model.SubmissionDate)</th>
                <th>@Html.DisplayNameFor(model => model.Description)</th>
                <th>@Html.DisplayNameFor(model => model.StartDate)</th>
                <th>@Html.DisplayNameFor(model => model.EndDate)</th>
                <th>@Html.DisplayNameFor(model => model.TotalVacationDays)</th>
                <th>@Html.DisplayNameFor(model => model.Employee)</th>
                <th>@Html.DisplayNameFor(model => model.VacationType)</th>
                <th>@Html.DisplayNameFor(model => model.RequestState)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.SubmissionDate)</td>
                    <td>@Html.DisplayFor(modelItem => item.Description)</td>
                    <td>@Html.DisplayFor(modelItem => item.StartDate)</td>
                    <td>@Html.DisplayFor(modelItem => item.EndDate)</td>
                    <td>@Html.DisplayFor(modelItem => item.TotalVacationDays)</td>
                    <td>@Html.DisplayFor(modelItem => item.Employee.EmployeeNumber)</td>
                    <td>@Html.DisplayFor(modelItem => item.VacationType.VacationTypeName)</td>
                    <td>@Html.DisplayFor(modelItem => item.RequestState.StateName)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.RequestId" class="btn btn-warning btn-sm">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
