@model IEnumerable<EmployeeManagementSystem.DTOs.PendingRequestDTO>
@{
    ViewData["Title"] = "Pending Vacation Requests";
}

<div class="container mt-4">
    <h2>Pending Vacation Requests</h2>

    <table class="table table-hover">
        <thead class="table-light">
            <tr>
                <th>Employee</th>
                <th>Description</th>
                <th>Duration</th>
                <th>Dates</th>
                <th>Salary</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var request in Model)
            {
                <tr>
                    <td>@request.EmployeeName (@request.EmployeeNumber)</td>
                    <td>@request.Description</td>
                    <td>@request.Duration</td>
                    <td>@request.StartDate.ToString("d") - @request.EndDate.ToString("d")</td>
                    <td>@request.Salary.ToString("C2")</td>
                    <td>
                        <a asp-action="Approve" asp-route-id="@request.RequestId"
                           class="btn btn-sm btn-success">Approve</a>
                        <a asp-action="Decline" asp-route-id="@request.RequestId"
                           class="btn btn-sm btn-danger">Decline</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>