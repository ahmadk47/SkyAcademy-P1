@model IEnumerable<EmployeeManagementSystem.DTOs.PendingRequestDTO>
@{
    ViewData["Title"] = "Pending Vacation Requests";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <table class="table table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Employee</th>
                <th>Description</th>
                <th>Duration</th>
                <th>Dates</th>
                <th>Salary</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var request in Model)
            {
                <tr>
                    <td>@request.EmployeeName (@request.EmployeeNumber)</td>
                    <td>@request.Description</td>
                    <td>@request.Duration</td>
                    <td>@request.StartDate.ToString("d") - @request.EndDate.ToString("d")</td>
                    <td>@request.Salary.ToString("C2")</td>
                    <td class="text-center">
                        <a asp-action="Approve" asp-route-id="@request.RequestId"
                           class="btn btn-sm btn-success" title="Approve Request">
                            Approve
                        </a>
                        <a asp-action="Decline" asp-route-id="@request.RequestId"
                           class="btn btn-sm btn-danger" title="Decline Request"
                           onclick="return confirm('Are you sure you want to decline this request?');">
                            Decline
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
